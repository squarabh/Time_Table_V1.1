<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/background_blue"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/subject_tut_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="16dp"
            tools:text="subject" />

        <TextView
            android:id="@+id/desc_tut_1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="desc" />

        <TextView
            android:id="@+id/faculty_tut_1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="faculty" />

        <TextView
            android:id="@+id/time_tut_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="time" />

    </LinearLayout>


    <View
        android:layout_width="13dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@android:color/background_light"
        android:visibility="invisible">


    </View>


    <LinearLayout
        android:layout_width="0dp"
        android:background="@drawable/background_blue"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/subject_tut_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:text="subject" />

        <TextView
            android:id="@+id/desc_tut_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="desc" />

        <TextView
            android:id="@+id/faculty_tut_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="faculty" />

        <TextView
            android:id="@+id/time_tut_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            tools:text="time" />

    </LinearLayout>

</LinearLayout>
